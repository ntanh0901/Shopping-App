{{> topbar }}
<div class="wallet-body bg-light px-4 py-3">
    <section class="rounded bg-white p-3">
        <h5 class="mb-3"> Ví tiền </h5>
        <div class="d-flex justify-content-between align-items-end">
            <div>
                <i class='bx bx-wallet'></i>
                <span>Số dư hiện tại</span>
            </div>
            <span class="text-danger fs-3">{{ balance }}&#8363;</span>
        </div>
    </section>
    <section class="mt-3 rounded bg-white p-3">
        <form action="/client/rechage" method="post">
            <h5 class="mb-3">Nạp tiền vào tài khoản</h5>
            <h6 class="text-muted mb-3">Chọn mệnh giá nạp</h6>

            <div class="row">
                <div class="col">
                    <img src="/img/icons/vnpay-logo.svg" alt="">
                </div>
                <div class="col">
                    <div class="money-container mb-3">
                        <div>
                            <input type="radio" class="btn-check" id="10k" name="moneyValue" value="10000">
                            <label for="10k" class="btn btn-outline-primary w-100">10.000&#8363;</label>
                        </div>

                        <div>
                            <input type="radio" class="btn-check" id="20k" name="moneyValue" value="20000">
                            <label for="20k" class="btn btn-outline-primary w-100">20.000&#8363;</label>
                        </div>

                        <div>
                            <input type="radio" class="btn-check" id="50k" name="moneyValue" value="50000">
                            <label for="50k" class="btn btn-outline-primary w-100">50.000&#8363;</label>
                        </div>

                        <div>
                            <input type="radio" class="btn-check" id="100k" name="moneyValue" value="100000">
                            <label for="100k" class="btn btn-outline-primary w-100">100.000&#8363;</label>
                        </div>

                        <div>
                            <input type="radio" class="btn-check" id="200k" name="moneyValue" value="200000">
                            <label for="200k" class="btn btn-outline-primary w-100">200.000&#8363;</label>
                        </div>

                        <div>
                            <input type="radio" class="btn-check" id="500k" name="moneyValue" value="500000">
                            <label for="500k" class="btn btn-outline-primary w-100">500.000&#8363;</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-danger">Nạp tiền</button>
                </div>
            </div>
        </form>
    </section>
</div>
{{> footer }}