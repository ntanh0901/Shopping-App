{{> topbar }}
<div class="main-body d-flex py-3 px-4 bg-light gap-3">
    <section class="bg-white py-3 px-2 rounded">
        <div class="d-flex align-items-center">
            <i class='bx bx-list-ul fs-4'></i>
            <p class="fw-bold mx-2 my-0"> Danh mục sản phẩm</p>
        </div>
        
        <div class="d-flex flex-column gap-0 align-items-stretch categories">
            <div class="filter-btn">
                <input type="radio" name="categories" id="all" value="Tất cả" checked>
                <label for="all" class="fw-normal rounded">Tất cả</label>
            </div>
            {{#each type}}
            <div class="filter-btn">
                <input type="radio" name="categories" id="{{this.MaLoai}}" value="{{this.TenLoai}}">
                <label for="{{this.MaLoai}}" class="fw-normal rounded">{{this.TenLoai}}</label>
            </div>
            {{/each}}
        </div>
    </section>
    <section class="bg-white flex-grow-1 rounded p-0" style="overflow: hidden;">
        <section class="row bg-intro">
            <div class="col"></div>
            <div class="col"></div>
        </section>
        <section class="products my-4 px-3">
            <h4>Sản phẩm</h4>
            <div class="card-container mt-4" id="card-container">

                {{!-- homme.js --}}

            </div>
        </section>
        <div class="m-3 pagination d-flex gap-2 justify-content-center">
            <button id="previous-page" class="btn"><i class='bx bxs-chevrons-left'></i></button>
            <div id="pagination" class="d-flex gap-2"></div>
            <button id="next-page" class="btn"><i class='bx bxs-chevrons-right'></i></button>
        </div>
        {{> footer }}

    </section>
</div>

<script src="/js/home.js"></script>