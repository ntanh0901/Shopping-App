<script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0"></script>
<script type="module" src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-chart-horizontalbar@3.7.0"></script>
<style>
    li::marker {
        font-size: 2rem;
        bottom: 0;
    }
</style>{{> profile}}

<div id="admin">
    {{> admin_sidebar}}
    <div class=" main-content">
        <div class="title_content">
            <div>
                <div class="main-header">
                    Dashboard
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center" style="">
            {{!-- Tổng doanh thu card --}}
            <section class="me-3 col-4" style=" heigh: 45vh ">
                <div class="card widget-card border-0" style="height: 100%;">
                    <div class="card-body p-4 container d-flex flex-column">
                        <div class="row">
                            <div class="col-8">
                                <h5 class="card-title widget-card-title text-light-emphasis mb-4">Tổng doanh thu</h5>
                                <h3 class="card-subtitle  text-secondary m-0" id="sumRevenue"></h3>
                            </div>
                            <div class="col-4">
                                <div class="d-flex justify-content-end">
                                    <i class='bx bx-dollar-circle text-primary' style="font-size: 3rem;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-auto">
                            <div class="col-12">
                                <div class="d-flex align-items-center mt-3">
                                    <span
                                        class="lh-1 me-3 bg-success-subtle text-success rounded-circle p-1 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-arrow-right-short bsb-rotate-n45"></i>
                                    </span>
                                    <div>
                                        <p class="fs-7 mb-0" id="percentDiff">Tính đến hiện tại</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            {{!-- Doanh thu on LoaiSP chart --}}
            <section style=" heigh: 45vh" class="col-7 pe-0 category-chart d-flex flex-row">
                <canvas class="" id="revenueChart" width="250px;" height="200"></canvas>
                <div id="legendChart"></div>
            </section>
        </div>
        <br />
        <div class="d-flex justify-content-center" style="">
            {{!-- Doanh thu on current day/month/year --}}
            <section class="me-3 col-4 " style=" ;  heigh: 50vh">
                <div class="card border-0">
                    <div class="card-body">
                        <h5 class="card-title">Doanh thu hiện tại</h5>
                        <hr>
                        <div class=" mt-4 d-flex flex-column" id="revenueSection">
                        </div>

                    </div>
                </div>
            </section>
            {{!-- Top 5 sản phẩm bán chạy nhất --}}
            <section class="me-3 col-7 " style=" ;  heigh: 50vh">
                <div class="card widget-card border-0">
                    <div class="card-body p-2 ps-4 container d-flex flex-column">
                        <div class="row">
                            <div class="col-9">
                                <h5 class="card-title widget-card-title text-light-emphasis mb-0">Top 5 sản phẩm bán
                                    chạy </h5>
                            </div>
                        </div>
                        <hr>
                        <div class="row d-flex">
                            {{!-- chart --}}
                            <canvas  id="top5Chart" width="" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <script src="/js/statistic.js"></script>
    </div>
