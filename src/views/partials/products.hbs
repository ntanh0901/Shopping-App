<div class="main-content">
    <div class="title_content">
        <div>
            <div class="main-header">
                Sản phẩm
            </div>

            <div class="sub-header">
                Quản lý sản phẩm
            </div>
        </div>
    </div>

    <div class="position-relative bg-light mx-auto" style="width: 95%  ;min-height: 50vh ; background-color: $nav-bg">
        <table class="manageTable table custom-table-bg table-hover mx-auto rounded-3 overflow-hidden" id="productTable" >
            <thead class="my-auto">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ID </th>
                    <th scope="col">Tên </th>
                    <th scope="col">Giá</th>
                    <th scope="col">Số lượng tồn</th>
                    <th scope="col">Loại</th>
                    <th scope="col">Ảnh</th>
                    <th scope="col">Chỉnh sửa/Xóa</th>
                </tr>
            </thead>
            <tbody>
            </tbody>

            <div class="ic-plus" id="btn_add">
                <i class='btn bx bxs-plus-square btn-plus position-absolute cursor-pointer end-0 bottom-0'
                    style="font-size:1.5rem; margin-bottom:-2rem" data-placement="top" title="Thêm"
                    onclick="addNewProduct() "></i>
            </div>
        </table>

        <!-- Confirm delete product -->
        <div class="modal fade " id="deleteConfirmationModal" tabindex="-1" data-bs-backdrop="static">
            <div class="modal-dialog ">
                <div class="modal-content p-3">
                    <div class="modal-header  bg-light text-primary">
                        <h5 class="modal-title" id="deleteConfirmationModalLabel">Xác nhận</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Xóa sản phẩm "<span id="productToDelete"></span>"?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                        <button type="button" class="btn btn-danger" id="comfirmDeleteProductBtn"
                            onclick="confirmDeleteProduct()" data-bs-dismiss="modal">Xóa</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form  edit/add product -->
        <div class="modal fade" id="productFormModal" tabindex="-1" data-bs-backdrop="static">
            <div class="modal-dialog">
                <div class="modal-content p-3">
                    <div class="modal-header  bg-light text-primary">
                        <h5 class="modal-title" id="modalTitle">Thêm sản phẩm</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <form class="" id="productForm" onsubmit="event.preventDefault();" method="post">
                            <input type="hidden" id="editIndex" value="-1">

                            <div class="mb-2">
                                <label for="productName" class="form-label">Tên sản phẩm</label>
                                <input type="text" class="form-control" id="productName" name="Tên sản phẩm" required>
                                <div class="error-message" id="productNameError"></div>
                            </div>
                            <div class="mb-2">
                                <label for="productPrice" class="form-label">Giá</label>
                                <input type="number" class="form-control" id="productPrice" name="Giá" min="0"
                                    oninput="this.value = Math.abs(this.value)" required>
                                <div class="error-message" id="productPriceError"></div>
                            </div>
                            <div class="mb-2">
                                <label for="productStock" class="form-label">Số lượng tồn</label>
                                <input type="number" class="form-control" id="productStock" name="Số lượng tồn" min="0"
                                    oninput="this.value = Math.abs(this.value)" required>
                                <div class="error-message" id="productStockError"></div>
                            </div>
                            <div class="mb-2">
                                <label for="productCategory" class="form-label">Loại</label>
                                <select class="form-select" id="productCategory" name="Loại" required>
                                </select>
                                <div class="error-message" id="productCategoryError"></div>
                            </div>
                            <div class="mb-2">
                                <label for="productImage" class="form-label">Ảnh</label>
                                <input type="file" class="form-control" id="productImage" name="Ảnh" accept="image/*"
                                    onchange="updateImagePreview(this)">
                                <div class="error-message" id="productImageError"></div>
                                <img id="imagePreview" class="mt-2" style="max-width: 100px; max-height: 100px;">
                            </div>

                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                        <button type="button" class="btn btn-primary text-white" id="confirmBtn"
                            onclick="submitForm()">Xong</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center align-items-center">
            <li class="page-item">
                <button id="previous-page" class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </button>
            </li>
            <div id="page-container" class="d-flex gap-2">
            </div>
            <li class="page-item">
                <button id="next-page" class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </button>
            </li>
        </ul>
    </nav>


</div>




</div>

<script src="/js/products.js"></script>