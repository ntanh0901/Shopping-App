<aside class="sidebar">

    <section class="top-sidebar">
        <div class="logo-container">
            <div class="logo">
                <img src="/img/logo_hcmus.png" alt="hcmus logo" />
            </div>
            <div class="logo-title">
                <h1>SHOPPING</h1>
                <h1>APP</h1>
            </div>

        </div>
        <button id="menu-btn">
            <i class="bx bx-menu"></i>
        </button>
    </section>
    <ul class="item-container">
        <li>
            <a href="/admin/dashboard" class="nav-item {{#if isDashboard}} active {{/if}}">
                <i class="bx bx-home"></i>
                <p class="open">Dashboard</p>
            </a>
        </li>
        <li>
            <a href="/admin/categories" class="nav-item {{#if isCategories}} active {{/if}}">
                <i class="bx bx-category"></i>
                <p class="open">Danh mục</p>
            </a>
        </li>
        <li>
            <a href="/admin/products" class="nav-item {{#if isProducts}} active {{/if}}">
                <i class="bx bx-dish"></i>
                <p class="open">Sản phẩm</p>
            </a>
        </li>
        <li>
            <a href="/admin/users" class="nav-item {{#if isUsers}} active {{/if}}">
                <i class="bx bx-user"></i>
                <p class="open">Users</p>
            </a>
        </li>
    </ul>
    <section class="user-container">
        <a class="user">
            <img src="" alt="" id="imgSidebar "class="avatar" style="width: 3rem; height:3rem" type="button"
                data-bs-toggle="modal" data-bs-target="#viewProfileModal" />
            <p class="open">Admin</p>
        </a>
        <button class="logout-btn">
            <i class="bx bx-log-out"></i>
            <p class="open">Đăng xuất</p>
        </button>
    </section>

</aside>
<script src="/js/sidebar.js"></script>