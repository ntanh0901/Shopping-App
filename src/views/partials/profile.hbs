{{!-- view profile --}}
<div class="modal fade" id="viewProfileModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header   bg-light text-primary">
                <h5 class="modal-title" id="viewProfileModalLabel">Thông tin cá nhân</h5>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-5">
                <div class="mx-auto text-center"> <!-- Center the content -->
                    <img id="adminImage" src="/img/logo_hcmus.png" class="avatar rounded-circle mb-4"
                        style="width: 5rem; height: 5rem;" alt="Admin Avatar">
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Username:</strong>
                    </div>
                    <div class="col-md-6">
                        <span id="adminUsername"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Họ tên:</strong>
                    </div>
                    <div class="col-md-6">
                        <span id="adminName"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Tuổi:</strong>
                    </div>
                    <div class="col-md-6">
                        <span id="adminAge"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Giới tính:</strong>
                    </div>
                    <div class="col-md-6">
                        <span id="adminGender"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <i class="bx bx-phone"></i>
                        <strong>Điện thoại:</strong>
                    </div>
                    <div class="col-md-6">
                        <span id="adminPhone"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <i class="bx bx-envelope"></i>
                        <strong>Email:</strong>
                    </div>
                    <div class="col-md-6">
                        <span id="adminEmail"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <i class="bx bx-target-lock"></i>
                        <strong>Địa chỉ:</strong>
                    </div>
                    <div class="col-md-6">
                        <span id="adminAddress"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary text-white" data-bs-toggle="modal"
                    data-bs-target="#editProfileModal">Chỉnh sửa</button>
            </div>
        </div>
    </div>
</div>

{{!-- edit profile --}}
<div class="modal fade  " id="editProfileModal" tabindex="-1" role="dialog" data-bs-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content p-3">
            <div class="modal-header  bg-light text-primary">
                <h5 class="modal-title start-0" id="editProfileModalLabel">Chỉnh sửa
                    thông tin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editProfileForm">

                    <label class="form-label" class="form-label" for="editUsername">Username</label>
                    <input type="text" id="editUsername" name="editUsername" class="form-control" required />
                    <div class="error-message" id="errorUsername"></div>

                    <label class="form-label" for="editName">Họ tên</label>
                    <input type="text" id="editName" name="editName" class="form-control" required />
                    <div class="error-message" id="errorName"></div>

                    <div class="mb-2">
                        <label for="editDob" class="form-label">Ngày sinh</label>
                        <input type="date" class="form-control" id="editDob" name="Ngày sinh" required>
                        <div class="error-message" id="editDobError"></div>
                    </div>

                    <div class="mb-2">
                        <label class="d-block ">Giới tính</label>
                        <div class="form-check form-check-inline ms-5">
                            <input class="form-check-input" type="radio" name="editGender" id="editNam" value="Nam">
                            <label class="form-check-label" class="form-label" for="editNam">Nam</label>
                        </div>

                        <div class="form-check form-check-inline ">
                            <input class="form-check-input" type="radio" name="editGender" id="editNu" value="Nữ">
                            <label class="form-check-label" class="form-label" for="editNu">Nữ</label>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label class="form-label" for="editPhone">Điện thoại</label>
                        <input type="tel" id="editPhone" name="editPhone" class="form-control" required />
                        <div class="error-message" id="errorPhone"></div>
                    </div>

                    <div class="mb-2">
                        <label class="form-label" for="editEmail">Email</label>
                        <input type="email" id="editEmail" name="editEmail" class="form-control" required />
                        <div class="error-message" id="errorEmail"></div>
                    </div>

                    <div class="mb-2">
                        <label class="form-label" for="editAddress">Địa chỉ</label>
                        <input type="text" id="editAddress" name="editAddress" class="form-control" required />
                        <div class="error-message" id="errorAddress"></div>
                    </div>

                    <div class="mb-2">
                        <label for="productImage" class="form-label">Ảnh</label>
                        <input type="file" class="form-control" id="productImage" name="Ảnh" accept="image/*"
                            onchange="updateImagePreview(this)">
                        <div class="error-message" id="productImageError"></div>
                        <img id="editImage" class="mt-2" style="max-width: 100px; max-height: 100px;">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary text-white" onclick="submitForm()">Lưu</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/profile.js"></script>
