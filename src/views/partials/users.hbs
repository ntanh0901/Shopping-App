<div class="main-content">
    <div class="title_content">
        <div>
            <div class="main-header">
                Người dùng
            </div>

            <div class="sub-header">
                Quản lý người dùng
            </div>
        </div>
    </div>

    <div class="position-relative  mx-auto w-50" >
        <table class="manageTable table table-hover mx-auto rounded-3 overflow-hidden" id="userTable">
            <thead class="my-auto">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ID</th>
                    <th scope="col">Họ tên</th>
                    <th scope="col">Xem/Sửa/Xóa</th>
                </tr>
            </thead>
            <tbody>
            </tbody>

            <div class="ic-plus" id="btn_add">
                <i class='btn bx bxs-plus-square btn-plus position-absolute cursor-pointer end-0 bottom-0'
                    style="font-size:1.5rem; margin-bottom:-2rem" data-placement="top" title="Thêm"
                    onclick="addNewUser() "></i>
            </div>
        </table>

        {{!-- Modal delete confirm --}}
        <div class="modal fade position-absolute" id="deleteConfirmationModal" tabindex="-1" data-bs-backdrop="static">
            <div class="modal-dialog ">
                <div class="modal-content">
                    <div class="modal-header  bg-light text-primary">
                        <h5 class="modal-title" id="deleteConfirmationModalLabel">Xác nhận</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Xóa người dùng "<span id="userToDelete"></span>"?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                        <button type="button" class="btn btn-danger" id="comfirmDeleteUserBtn"
                            onclick="confirmDeleteUser()" data-bs-dismiss="modal">Xóa</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form  edit/add user -->
        <div class="modal fade" id="userFormModal" tabindex="-1" data-bs-backdrop="static">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-light text-primary">
                        <h5 class="modal-title" id="modalTitle">Thêm người dùng</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <form class="" id="userForm" onsubmit="event.preventDefault();" method="post">
                            <input type="hidden" id="editIndex" value="-1">

                            <div class="mb-2">
                                <label for="userName" class="form-label">Tên người dùng</label>
                                <input type="text" class="form-control" id="userName" name="Tên người dùng" required>
                                <div class="error-message" id="userNameError"></div>
                            </div>
                            <div class="mb-2">
                                <label for="userPrice" class="form-label">Giá</label>
                                <input type="number" class="form-control" id="userPrice" name="Giá" min="0"
                                    oninput="this.value = Math.abs(this.value)" required>
                                <div class="error-message" id="userPriceError"></div>
                            </div>
                            <div class="mb-2">
                                <label for="userStock" class="form-label">Số lượng tồn</label>
                                <input type="number" class="form-control" id="userStock" name="Số lượng tồn" min="0"
                                    oninput="this.value = Math.abs(this.value)" required>
                                <div class="error-message" id="userStockError"></div>
                            </div>
                            <div class="mb-2">
                                <label for="userCategory" class="form-label">Loại</label>
                                <select class="form-select" id="userCategory" name="Loại" required>
                                </select>
                                <div class="error-message" id="userCategoryError"></div>
                            </div>
                            <div class="mb-2">
                                <label for="userImage" class="form-label">Ảnh</label>
                                <input type="file" class="form-control" id="userImage" name="Ảnh" accept="image/*"
                                    onchange="updateImagePreview(this)">
                                <div class="error-message" id="userImageError"></div>
                                <img id="imagePreview" class="mt-2" style="max-width: 100px; max-height: 100px;">
                            </div>

                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                        <button type="button" class="btn btn-primary text-white" id="confirmBtn"
                            onclick="submitForm()"></button>
                    </div>
                </div>
            </div>
        </div>

    </div>



</div>




</div>

<script src="/js/users.js"></script>