<div class="p-4 d-flex bg-primary min-vh-100">
    <section class="col d-flex flex-column justify-content-center login-left">
        <h1 class="text-light">Chào mừng đến ShopUS</h1>
        {{!-- <p class="text-secondary">Vui lòng đăng nhập để tiếp tục</p> --}}
        <img src="/img/login-bg.svg" alt="login-background-img" class="flex-grow-1 h-100 login-bg">
    </section>
    <section class="col d-flex align-items-center justify-content-center p-3">
        <form novalidate action="/" method="post" class="rounded bg-white shadow-lg p-3" id="login-form">
            <div class="d-flex gap-1">
                <p>Chưa có tài khoản? </p>
                <a href="/signup">Đăng kí ngay</a>
            </div>
            <h2 class="text-primary text-center my-4">Đăng nhập</h2>
            <div class="form-floating mb-3 border-bottom">
                <input type="text" class="form-control border-0 shadow-none" id="username" placeholder="username" required>
                <label for="username" class="form-label">username</label>
            </div>
            <div class="input-group mb-3 border-bottom">
                <div class="form-floating">
                    <input type="password" class="form-control border-0 shadow-none" id="password"
                        placeholder="password" required>
                    <label for="password" class="form-label">Mật khẩu</label>
                </div>
                <i class="bi bi-eye-slash input-group-text border-0 bg-transparent show-hide-pass"></i>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="remember-me">
                <label for="remember-me" class="form-check-label">Ghi nhớ đăng nhập</label>
            </div>
            <div class="d-flex flex-column">
                <button type="submit" class="btn btn-lg btn-primary rounded-pill text-light shadow">Đăng nhập</button>
            </div>
            <p class="text-center my-3">Hoặc</p>
            <div class="d-flex flex-column gap-2">
                <a href="/">
                    <button type="button" class="btn border-primary d-flex align-items-center w-100 rounded-pill">
                        <img src="/img/icons/facebook.svg" alt="facebook-icon" class="third-app-icon">
                        <span class="flex-grow-1 text-center">Đăng nhập với Facebook</span>
                    </button>
                </a>

                <a href="/">
                    <button type="button" class="btn border-primary d-flex align-items-center w-100 rounded-pill">
                        <img src="/img/icons/google.svg" alt="google-icon" class="third-app-icon">
                        <span class="flex-grow-1 text-center">Đăng nhập với Google</span>
                    </button>

                </a>
            </div>
        </form>
    </section>
</div>

<script src="/js/login.js"></script>